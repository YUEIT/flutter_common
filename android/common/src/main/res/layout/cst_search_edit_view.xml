<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/layout_search_real"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10"
        android:background="@drawable/shape_bg_efefef_radius_38"
        android:layout_toLeftOf="@+id/tv_search">

        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/app_icon_search" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/q60"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/rl_clear"
            android:layout_toRightOf="@+id/btn_search"
            android:background="@android:color/transparent"
            android:hint="搜索"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@android:color/black"
            tools:text="sfsf"
            android:textColorHint="#9e9e9e"
            android:textSize="11sp" />

        <RelativeLayout
            android:id="@+id/rl_clear"
            android:layout_width="@dimen/q80"
            android:layout_height="@dimen/q80"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/btn_clear"
                android:layout_width="@dimen/q50"
                android:layout_height="@dimen/q50"
                android:layout_centerInParent="true"
                android:src="@drawable/app_icon_clear"
                android:visibility="gone"
                tools:visibility="visible" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:padding="@dimen/margin10"
        android:textSize="12sp"
        android:text="搜索"
        android:textColor="#787878" />

</LinearLayout>