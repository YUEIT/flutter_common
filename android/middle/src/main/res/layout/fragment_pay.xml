<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_ffffff_top_radius_50"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/q43"
            android:layout_marginBottom="@dimen/q21"
            android:textColor="#2f2f2f"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="请选择支付方式"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/closeIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/q43"
            android:layout_gravity="right"
            android:src="@drawable/icon_close_pay"/>

    </FrameLayout>


    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#f93a2f"
        android:textSize="11sp"
        android:text="支付剩余时间："/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/payRV"
        android:layout_marginTop="@dimen/q109"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/toPayTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/q150"
        android:layout_marginTop="@dimen/q110"
        android:layout_marginBottom="@dimen/q57"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_bg_gradient_ffe015_fece2c_radius_72"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="#2f2f2f"
        android:textStyle="bold"
        android:text="立即支付"/>
</LinearLayout>