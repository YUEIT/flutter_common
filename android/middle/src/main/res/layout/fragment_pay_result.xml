<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/successLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/q43"
        android:background="@drawable/shape_bg_ffffff_radius_25"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/q200"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_pay_success"/>

        <TextView
            android:id="@+id/paySuccessTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/q30"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2f2f2f"
            android:text="支付成功"/>

        <TextView
            android:id="@+id/priceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/q8"
            android:layout_gravity="center_horizontal"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#f93a2f"
            android:text="¥000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/q100"
            android:layout_marginBottom="@dimen/q132"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/toShoppingTV"
                android:layout_width="@dimen/q342"
                android:layout_height="@dimen/q115"
                android:background="@drawable/shape_bg_white_border_dfdfdf_radius_60"
                android:gravity="center"
                android:textColor="#2f2f2f"
                android:textSize="13sp"
                android:text="继续购物"/>
            <TextView
                android:id="@+id/toOrderTV"
                android:layout_width="@dimen/q342"
                android:layout_height="@dimen/q115"
                android:layout_marginLeft="@dimen/q72"
                android:background="@drawable/shape_bg_white_border_dfdfdf_radius_60"
                android:gravity="center"
                android:textColor="#2f2f2f"
                android:textSize="13sp"
                android:text="查看订单"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>